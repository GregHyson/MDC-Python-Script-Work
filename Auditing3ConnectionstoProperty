import arcpy
# Find and set the filepeths to the three service line layers
wSL = 'G:\ArcGIS\Desktop103\DataConnections\GISTM.sde\gistm.GIS.AMISWaterServiceLinePipe'
wwSL = 'G:\ArcGIS\Desktop103\DataConnections\GISTM.sde\gistm.GIS.AMISWasteWaterServiceLinePipe'
swSL = 'G:\ArcGIS\Desktop103\DataConnections\GISTM.sde\gistm.GIS.AMISStormWaterServiceLinePipe'
# Use the filepaths to open cursors to move through the layers accessing the Asset Number
wServiceLinesAssNo = []
wwServiceLinesAssNo = []
swServiceLinesAssNo = []
with arcpy.da.SearchCursor(wSL,['Asset ID', 'Locality'], where_clause = Locality = 'BLENHEIM') as cursor:
    for row in cursor:
        wServiceLinesAssNo.append("'{0}',".format(row.getValue(0)))
with arcpy.da.SearchCursor(wwSL,['Asset ID', 'Locality'], where_clause = Locality = 'BLENHEIM') as cursor:
    for row in cursor:
        wwServiceLinesAssNo.append("'{0}',".format(row.getValue(0)))
with arcpy.da.SearchCursor(swSL,['Asset ID', 'Locality'], where_clause = Locality = 'BLENHEIM') as cursor:
    for row in cursor:
        swServiceLinesAssNo.append("'{0}',".format(row.getValue(0)))

